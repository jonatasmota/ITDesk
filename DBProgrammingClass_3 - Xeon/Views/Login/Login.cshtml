@model DBProgrammingClass_3.Models.User

@{
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login-container">
        <div class="row">
            <div class="col-sm-6">
                <form method="post" role="form" id="login" class="login-form fade-in-effect">

                    <div class="login-header">
                        <a href="#" class="logo">
                            <img src="~/assets/images/itdesk.png" alt="Logo" width="80" />
                        </a>
                        <p>Dear user, log in to access the dashboard!</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.UserName, new { @class = "control-label" })
                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control input-dark" })
                        @Html.ValidationMessageFor(a => a.UserName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.Password, new { @class = "control-label" })
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control input-dark" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark  btn-block text-left">
                            <i class="fa-lock"></i>
                            Log In
                        </button>
                    </div>

                    <div class="login-footer">
                        <a href="#">Forgot your password?</a>
                        <div class="info-links">
                            <a href="#">Register</a> -
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}  