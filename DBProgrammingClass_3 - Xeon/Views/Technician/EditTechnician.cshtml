@model DBProgrammingClass_3.Models.Technician

<link rel="stylesheet" href="~/Content/styles.css" />

<div class="row header">
    <div class="col-md-12">
        <h2>Add/Edit Technician</h2>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["ErrorMessage"]
    </div>
}

<br />

@using (Html.BeginForm("EditTechnician", "Technician", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <form class="technician-style">

            @Html.HiddenFor(x => x.TechID)

            <div class="form-group ">
                @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Phone, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone" })
                @Html.ValidationMessageFor(x => x.Phone)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a class="btn btn-danger" href="javascript:history.back()">Return</a>
            </div>
        </form>
    </div>
}

